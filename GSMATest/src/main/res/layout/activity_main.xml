<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".MainActivity">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<Button
			android:id="@+id/btnGenerateToken"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:layout_weight="1"
			android:text="Generate Token"
			android:visibility="gone" />
		
		<Button
			android:id="@+id/btnCheckBalance"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:layout_weight="1"
			android:text="Balance"
			android:textSize="10sp" />

		<Button
			android:id="@+id/btnPayeeInitiated"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:layout_weight="1"
			android:text="Payee Initiated"
			android:textSize="10sp" />

	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<Button
			android:id="@+id/btnRequestState"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:layout_weight="1"
			android:text="Request State"
			android:textSize="10sp" />
		
		<Button
			android:id="@+id/btnViewTransaction"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:layout_weight="1"
			android:text="Transaction"
			android:textSize="10sp" />
		
		<Button
			android:id="@+id/btnObtainAuthCode"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:layout_weight="1"
			android:text="Auth Code"
			android:textSize="10sp" />
	
	</LinearLayout>
	
	<TextView
		android:id="@+id/txtResponse"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:textColor="@color/white"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>